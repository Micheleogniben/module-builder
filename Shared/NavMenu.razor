@code {
    private async Task DownloadLogs()
    {
        try
        {
            await LoggingService.DownloadLogsAsTxtAsync();
            ErrorService.ShowSuccess("Log scaricati con successo!", "Download completato");
        }
        catch (Exception ex)
        {
            ErrorService.ShowError($"Errore durante il download dei log: {ex.Message}", "Errore di download");
        }
    }
}

